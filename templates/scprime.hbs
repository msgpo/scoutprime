<div class ="ipUrl">
    {{#if block.data.details.ipUrl}}
    <a href="{{block.data.details.ipUrl}}"> Search Scout Prime </a><i class="btb bt-external-link integration-text-bold-color"></i>
    {{/if}}
</div>


<div class="tic-gauge-container">
<svg x="0" y="0" width="100%" height="60" viewBox="0 0 50 60">
    <g transform="translate(30,30)">
        <g>
            <circle r="25" stroke="#eee" transform="rotate(-90)" fill="#fff" stroke-width="4" cx="0" cy="0"></circle>
            {{!-- this is the inner circle --}}
            {{!-- stroke=<color> is the inner circle color --}}
            <circle stroke-dasharray="157.07963267948966" r="25" stroke="{{threatColor}}"
                    transform="rotate(-90)" fill="none" stroke-dashoffset="{{strokeOffset}}" stroke-width="4" cx="0"
                    cy="0"></circle>
            <text text-anchor="middle" x="0" y="5" fill="{{threatColor}}" font-size="13">{{details.ticScore}}</text>
        </g>
    </g>
</svg>
</div>


{{#each details.threats as |threat|}}

    <div class="threat">
        {{#if threat.[influence-score]}}
            <span> Influence Score: </span>
            {{threat.[influence-score]}}
        {{/if}}

        {{#if threat.[observed-at]}}
            <span> Threat Seen: </span>
            {{moment-time threat.[observed-at]}}
        {{/if}}

        {{#if threat.[first-seen]}}
            <span> Threat Seen: </span>
            {{moment-time threat.[first-seen]}}
        {{/if}}

        {{#if threat.source}}
            <span> Source: </span>
            {{threat.source}}
        {{/if}}

        {{#if threat.file}}
            <span> File: </span>
            {{threat.file}}
        {{/if}}

        {{#if threat.type}}
            <span> Type: </span>
            {{threat.type}}
        {{/if}}

        {{#if threat.name}}
            <span> Threat Name: </span>
            {{threat.name}}
        {{/if}}

        {{#if threat.targets}}
            <span> Targets: </span>
            {{threat.targets}}
        {{/if}}

        {{#if threat.reports}}
            <span> Reports: </span>
            {{threat.reports}}
        {{/if}}
        </div>

{{/each}}

